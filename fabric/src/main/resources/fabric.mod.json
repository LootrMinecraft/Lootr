{
  "schemaVersion": 1,
  "id": "lootr",
  "version": "${version}",

  "name": "Lootr",
  "description": "A mod that makes it so nobody misses out on Loot!",
  "authors": [
    "Noobanidus",
    "ZestyBlaze"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/lootr-fabric",
    "sources": "https://github.com/noobanidus/Lootr/tree/fabric-1.19.4",
    "issues": "https://github.com/noobanidus/Lootr/issues"
  },

  "license": "MIT License",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "noobanidus.mods.lootr.Lootr"
    ],
    "client": [
      "noobanidus.mods.lootr.client.LootrClient"
    ],
    "modmenu": [
      "noobanidus.mods.lootr.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "lootr.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17"
  },
  "accessWidener": "lootr.accesswidener"
}
